{
  "yogi": {
    "location": "/Supervisors/${HOSTNAME}",
    "connection": {
      "target": "127.0.0.1:10000",
      "timeout": null,
      "identification": null
    }
  },
  "logging": {
    "stdout": {
      "colourised": true,
      "max-verbosity": "INFO",
      "component-verbosity": {
        "App": "TRACE",
        "Yogi": "INFO"
      }
    },
    "yogi": {
      "max-verbosity": "INFO",
      "component-verbosity": {
        "App": "DEBUG",
        "Yogi": "INFO"
      }
    }
  },
  "constants": {
    "LOG_DIR": "/var/log"
  },
  "defaults": {
    "services": {
      "enabled": true,
      "logfile": "${LOG_DIR}/${SERVICE}.log",
      "files-triggering-restart": [],
      "startup-command": null,
      "startup-timeout": 5.0,
      "execution-command": null,
      "restart-delay": 5.0
    },
    "device-groups": {
      "enabled": true,
      "logfile": "${LOG_DIR}/${DEVICE_GROUP}-${DEVICE_NAME}.log",
      "files-triggering-restart": [],
      "devices": "/dev/ttyUSB*",
      "startup-command": null,
      "startup-timeout": 5.0,
      "validation-command": null,
      "validation-timeout": 5.0,
      "pre-execution-command": null,
      "pre-execution-timeout": 5.0,
      "execution-command": null,
      "restart-delay": 5.0
    }
  },
  "services": {
  },
  "device-groups": {
  }
}
