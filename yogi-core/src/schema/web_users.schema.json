{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Web server users",
  "type": "object",
  "required": ["users"],

  "properties": {
    "users": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        ".+": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "first_name": {
              "type": "string"
            },
            "last_name": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "phone": {
              "type": "string"
            },
            "password": {
              "type": "string"
            },
            "groups": {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            },
            "enabled": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
