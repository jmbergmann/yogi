root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab

[*.c,*.cpp,*.cc,*.h,*.hh,*.hpp]
indent_size = 2
max_line_length = 80

[*.py]
indent_size = 4
max_line_length = 79

[*.cs]
indent_size = 4
max_line_length = 80

[*.json]
indent_size = 2
